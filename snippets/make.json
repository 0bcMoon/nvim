{
    "make template": {
        "prefix": "make",
        "body": [
            "SRC = $1",
            "",
            "OBJ_DIR = ./obj/",
            "",
            "OBJ = $(addprefix $(OBJ_DIR), $(SRC:.cpp=.o))",
            "",
            "CC = c++",
            "",
            "INC = ",
            "",
            "CFLAGS = -std=c++98 -Wall -Wextra -Werror",
            "",
            "",
            "NAME = main",
            "",
            "all : $(NAME)",
            "",
            "$(NAME) :$(OBJ_DIR) $(OBJ)",
			"\t$(CC)  $(CFLAGS)  $(OBJ)  -o $(NAME)",
            "",
            "",
            "$(OBJ_DIR)%.o: %.cpp $(INC)",
			"\t$(CC) $(CFLAGS) -c $< -o $@",
            "",
            "$(OBJ_DIR) :",
			"\tmkdir -p $(OBJ_DIR)",
            "clean :",
			"\trm -rf $(OBJ_DIR)",
            "",
            "fclean : clean",
			"\trm -f $(NAME)",
            "",
            "re : fclean all",
            "",
            ".PHONY: all clean fclean re"
        ],
        "description": "make template"
    }
}
